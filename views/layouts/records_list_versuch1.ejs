<!doctype html>
<html>

<head>
    <meta name="ac:route" content="/records1">
    <base href="/">
    <script src="/dmxAppConnect/dmxAppConnect.js"></script>
    <meta charset="UTF-8">
    <title>Records List View</title>

    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.14.0/css/all.css" integrity="sha384-HzLeBuhoNPvSl5KYnjx0BT+WB0QEEqLprO+NBkkk5gbc67FTaL7XIGa2w1L0Xbgc" crossorigin="anonymous" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="/bootstrap/5/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/css/style.css" />
    <script src="/dmxAppConnect/dmxStateManagement/dmxStateManagement.js" defer></script>
    <script src="/dmxAppConnect/dmxRouting/dmxRouting.js" defer></script>
    <link rel="stylesheet" href="/dmxAppConnect/dmxBootstrap5TableGenerator/dmxBootstrap5TableGenerator.css" />
    <script src="/dmxAppConnect/dmxBootstrap5PagingGenerator/dmxBootstrap5PagingGenerator.js" defer></script>
    <script src="/dmxAppConnect/dmxBootstrap5Navigation/dmxBootstrap5Navigation.js" defer></script>

    <style>
        /*from tutorial https://stackoverflow.com/questions/25448511/pure-css-ellipsis-for-three-or-more-lines-of-text */
        @import "compass/css3";

        @import url(https://fonts.googleapis.com/css?family=Open+Sans:400,600,700);

        * {
            margin: 0;
            padding: 0;
            @include box-sizing(border-box);
        }

        body {
            padding: 3em 0em;
            font-family: 'Open Sans', Arial, sans-serif;
            color: #cf6824;
            background: #f7f5eb;
        }

        $font-size: auto;
        $line-height: 0.4;
        $lines-to-show: 5;

        td {
            widht: 80;
            max-width: 100;
            max-height: 30;
        }

        td:nth-child(1) {
            width: auto;
        }

        /* ID */
        td:nth-child(2) {
            width: 10%;
        }

        td:nth-child(3) {
            width: 10%;
        }

        td:nth-child(4) {
            width: auto;
        }

        /* designación */
        td:nth-child(5) {
            width: 5%;
        }

        td:nth-child(6) {
            width: auto;
        }

        /* IMAGEN */
        td:nth-child(7) {
            width: 10%;
        }

        /* fig. numero CAPTION */
        td:nth-child(8) {
            width: auto;
        }

        /* LOTE */
        td:nth-child(9) {
            width: 10%;
        }

        /* cuadrante */
        td:nth-child(10) {
            width: 5%;
        }

        /*fecha registro */
        td:nth-child(11) {
            width: 25%;
        }

        /*f descripción */
        td:nth-child(12) {
            width: 5%;
        }

        /*f timestamp */
        td:nth-child(12) {
            width: 5%;
        }

        /*f informe_designation */

        .modern {
            max-width: 120;
            max-width: 60;
        }

        h5 {
            display: block;
            /* Fallback for non-webkit */
            display: -webkit-box;
            max-width: auto;
            height: $font-size*$line-height*$lines-to-show;
            /* Fallback for non-webkit */
            margin: 0 auto;
            font-size: 2 px;
            line-height: $line-height;
            -webkit-line-clamp: 5;
            -webkit-box-orient: vertical;
            overflow: hidden;
            text-overflow: ellipsis;
        }
    </style>
</head>

<body is="dmx-app" id="main">
    <dmx-serverconnect id="sc_paged3" url="/api/paged_records_ok" dmx-param:limit="sc_paged3.data.custom.limit" dmx-param:offset="query_paged3.data.offset"></dmx-serverconnect>
    <dmx-query-manager id="query_paged3"></dmx-query-manager>

    <header class="bg-light">
        <div class="container-fluid">
            <div class="row">
                <div class="col">
                </div>
            </div>
        </div>

    </header>
    <div class="container">
        <div class="row">
            <div class="col">
                <h3>Table: Multiple Records List View</h3>
            </div>
        </div>
    </div>

    <include file="partials/formatter.js"></include>

    <div class="container-fluid">
        <div class="row">
            <div class="col">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Nombre Objeto</th>
                                <th>Descriptor</th>
                                <th>Designación</th>
                                <th>Estatus Objeto</th>
                                <th>imagen</th>
                                <th>Fig. Num.</th>
                                <th>Núm. Lote</th>
                                <th>Cuadrante</th>
                                <th>Fecha Registro</th>
                                <th>Descripción</th>
                                <th>Fecha/Hora Captura</th>
                                <th>Designación INAH</th>
                            </tr>
                        </thead>
                        <tbody is="dmx-repeat" dmx-generator="bs5table" dmx-bind:repeat="sc_paged3.data.custom.data" id="tableRepeat2">
                            <tr>
                                <td dmx-text="id_record"></td>
                                <td style="white-space: normal; text-overflow:ellipsis; overflow: normal; max-width:1px;" dmx-text="obj_label[0].value" dmx-text="obj_name"></td>
                                <td style="white-space: nowrap; text-overflow:ellipsis; overflow: hidden; max-width:1px;" dmx-text="obj_label[0].value"></td>
                                <td style="white-space: nowrap; text-overflow:ellipsis; overflow: hidden; max-width:1px;" dmx-text="obj_designation"></td>
                                <td style="white-space: nowrap; text-overflow:ellipsis; overflow: hidden; max-width:1px;" dmx-text="obj_status"></td>
                                <td><a><img width="100" dmx-bind:src="sc_paged3.data.custom[$index].thumb"></a></td>
                                <td style="white-space: normal; text-overflow:ellipsis; overflow: normal; max-width:1px;" dmx-text="caption"></td>
                                <td style="white-space: nowrap; text-overflow:ellipsis; overflow: hidden; max-width:1px;" dmx-text="lote_number"></td>
                                <td style="white-space: nowrap; text-overflow:ellipsis; overflow: hidden; max-width:1px;" dmx-text="find_location"></td>
                                <td style="white-space: nowrap; text-overflow:ellipsis; overflow: hidden; max-width:1px;" dmx-text="date_documented"></td>
                                <td class="modern">
                                    <h5 dmx-text="obj_description"></h5>
                                </td>
                                <td style="white-space: nowrap; text-overflow:ellipsis; overflow: hidden; max-width:1px;" dmx-text="set_timestamp"></td>
                                <td style="white-space: nowrap; text-overflow:ellipsis; overflow: hidden; max-width:1px;" dmx-text="informe_designation"></td>
                            </tr>
                        </tbody>
                    </table>
                    <ul class="pagination" dmx-populate="sc_paged3.data.custom" dmx-state="query_paged3" dmx-offset="offset" dmx-generator="bs5paging">
                        <li class="page-item" dmx-class:disabled="sc_paged3.data.custom.page.current == 1" aria-label="First">
                            <a href="javascript:void(0)" class="page-link" dmx-on:click="query_paged3.set('offset',sc_paged3.data.custom.page.offset.first)"><span aria-hidden="true">&lsaquo;&lsaquo;</span></a>
                        </li>
                        <li class="page-item" dmx-class:disabled="sc_paged3.data.custom.page.current == 1" aria-label="Previous">
                            <a href="javascript:void(0)" class="page-link" dmx-on:click="query_paged3.set('offset',sc_paged3.data.custom.page.offset.prev)"><span aria-hidden="true">&lsaquo;</span></a>
                        </li>
                        <li class="page-item" dmx-class:active="title == sc_paged3.data.custom.page.current" dmx-class:disabled="!active" dmx-repeat="sc_paged3.data.custom.getServerConnectPagination(2,1,'...')">
                            <a href="javascript:void(0)" class="page-link" dmx-on:click="query_paged3.set('offset',(page-1)*sc_paged3.data.custom.limit)">{{title}}</a>
                        </li>
                        <li class="page-item" dmx-class:disabled="sc_paged3.data.custom.page.current ==  sc_paged3.data.custom.page.total" aria-label="Next">
                            <a href="javascript:void(0)" class="page-link" dmx-on:click="query_paged3.set('offset',sc_paged3.data.custom.page.offset.next)"><span aria-hidden="true">&rsaquo;</span></a>
                        </li>
                        <li class="page-item" dmx-class:disabled="sc_paged3.data.custom.page.current ==  sc_paged3.data.custom.page.total" aria-label="Last">
                            <a href="javascript:void(0)" class="page-link" dmx-on:click="query_paged3.set('offset',sc_paged3.data.custom.page.offset.last)"><span aria-hidden="true">&rsaquo;&rsaquo;</span></a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div is="dmx-view" id="content">
            <%- await include(content, locals); %>
        </div>
        <script src="/bootstrap/5/js/bootstrap.bundle.min.js"></script>
</body>

</html>